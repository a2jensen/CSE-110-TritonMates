{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/tasks/addTaskform", "firebase/firebaseConfig.js", "app/api/events/getAllEvents.js", "app/api/events/editEvent.js", "app/api/events/addEvent.js", "app/api/events/getUserEvent.js", "app/api/events/getUserEvent.js"],
  "exclude": ["node_modules"]
}
